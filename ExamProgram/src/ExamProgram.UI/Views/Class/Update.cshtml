@model ClassCreateViewModel
@{
    ViewData["Title"] = "Update";
}

<div class="container-fluid">
    <h1 class="mx-3">Create</h1>
    <div class="row justify-content-center flex-column align-items-center">
        <form class="col-md-8" asp-action="Update" method="post">

            <div class="form-group col-md-12">
                <label asp-for="Number">Nömrə</label>
                <input asp-for="Number" class="form-control" placeholder="Nömrə">
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>

            <div class="text-danger" asp-validation-summary="ModelOnly"></div>

            <button type="submit" class="btn btn-primary">Təstiqlə</button>
            <a class="btn btn-danger" asp-action="index">Geriyə</a>
        </form>
    </div>
</div>

