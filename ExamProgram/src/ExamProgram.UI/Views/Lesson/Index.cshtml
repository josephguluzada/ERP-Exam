@model List<LessonViewModel>
@{
    ViewData["Title"] = "Dərslər səhifəsi";
    int counter = 0;
}


<div class="d-flex justify-content-between align-items-center">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="create" class="btn btn-primary">Create</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">No</th>
            <th scope="col">Id</th>
            <th scope="col">Kod</th>
            <th scope="col">Adı</th>
            <th scope="col">Müəllimin adı, soyadı</th>
            <th scope="col">Sinif No</th>
            <th scope="col">Əməliyyatlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lesson in Model)
        {
            counter++;
            <tr>
                <th scope="row">@counter</th>
                <td>@lesson.Id</td>
                <td>@lesson.Code</td>
                <td>@lesson.Name</td>
                <td>@(lesson.TeacherName + " " + @lesson.TeacherSurname)</td>
                <td>@lesson.ClassNumber</td>
                <td>
                    <a asp-action="update" asp-route-id="@lesson.Id" class="btn btn-warning">Düzənlə</a>
                    <a asp-action="delete" asp-route-id="@lesson.Id" class="btn btn-danger delete-btn">Sil</a>
                </td>
            </tr>
        }

    </tbody>
</table>








