@model TeacherCreateViewModel
@{
    ViewData["Title"] = "Update";
}

<div class="container-fluid">
    <h1 class="mx-3">Update</h1>
    <div class="row justify-content-center flex-column align-items-center">
        <form class="col-md-8" asp-action="Update" method="post">

            <div class="form-group col-md-12">
                <label asp-for="Name">Adı</label>
                <input asp-for="Name" class="form-control" placeholder="Adı">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group col-md-12">
                <label asp-for="Surname">Soyadı</label>
                <input asp-for="Surname" class="form-control" placeholder="Soyadı">
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>

            <button type="submit" class="btn btn-primary">Təstiqlə</button>
        </form>
    </div>
</div>

