@model List<ExamViewModel>
@{
    ViewData["Title"] = "Imtahanlar səhifəsi";
    int counter = 0;
}


<div class="d-flex justify-content-between align-items-center">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="create" class="btn btn-primary">Create</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">No</th>
            <th scope="col">Id</th>
            <th scope="col">Dərs kodu</th>
            <th scope="col">Tələbə nömrəsi</th>
            <th scope="col">Tələbə ad,soyad</th>
            <th scope="col">Qiymət</th>
            <th scope="col">Tarix</th>
            <th scope="col">Əməliyyatlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var std in Model)
        {
            counter++;
            <tr>
                <th scope="row">@counter</th>
                <td>@std.Id</td>
                <td>@std.LessonCode</td>
                <td>@std.StudentNumber</td>
                <td>@(std.StudentName + " " + std.StudentSurname)</td>
                <td>@std.Grade</td>
                <td>@std.ExamDate</td>
                <td>
                    <a asp-action="update" asp-route-id="@std.Id" class="btn btn-warning">Düzənlə</a>
                    <a asp-action="delete" asp-route-id="@std.Id" class="btn btn-danger delete-btn">Sil</a>
                </td>
            </tr>
        }

    </tbody>
</table>










