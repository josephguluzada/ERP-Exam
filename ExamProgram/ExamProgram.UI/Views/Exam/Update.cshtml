@model ExamCreateViewModel
@{
    ViewData["Title"] = "Update";
}

<div class="container-fluid">
    <h1 class="mx-3">Update</h1>
    <div class="row justify-content-center flex-column align-items-center">
        <form class="col-md-8" asp-action="Update" method="post">

            <div class="form-group col-md-12">
                <label asp-for="StudentNumber">Tələbə nömrəsi</label>
                <input asp-for="StudentNumber" class="form-control" placeholder="Tələbə nömrəsi">
                <span asp-validation-for="StudentNumber" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Grade">Qiymət</label>
                <input asp-for="Grade" class="form-control" placeholder="Qiymət">
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="LessonCode">Dərs kodu</label>
                <select asp-for="LessonCode" class="form-select" aria-label="Default select example" asp-items="@(new SelectList(ViewBag.Lessons,"Code","Code"))"></select>
                <span asp-validation-for="LessonCode" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="ExamDate">Tarix</label>
                <input asp-for="ExamDate" class="form-control" placeholder="Qiymət">
                <span asp-validation-for="ExamDate" class="text-danger"></span>
            </div>

            <div class="text-danger" asp-validation-summary="ModelOnly"></div>

            <button type="submit" class="btn btn-primary">Təstiqlə</button>
            <a class="btn btn-danger" asp-action="index">Geriyə</a>
        </form>
    </div>
</div>



