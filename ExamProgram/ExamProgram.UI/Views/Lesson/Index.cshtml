@model List<LessonViewModel>
@{
    ViewData["Title"] = "Dərslər səhifəsi";
    int counter = 0;
}


<div class="d-flex justify-content-between align-items-center">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="create" class="btn btn-primary">Create</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">No</th>
            <th scope="col">Id</th>
            <th scope="col">Ad</th>
            <th scope="col">Soyad</th>
            <th scope="col">Nömrəsi</th>
            <th scope="col">Sinif No</th>
            <th scope="col">Əməliyyatlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var std in Model)
        {
            counter++;
            <tr>
                <th scope="row">@counter</th>
                <td>@std.Id</td>
                <td>@std.Code</td>
                <td>@std.Name</td>
                <td>@std.TeacherName</td>
                <td>@std.TeacherSurname</td>
                <td>@std.ClassNumber</td>
                <td>
                    <a asp-action="update" asp-route-id="@std.Id" class="btn btn-warning">Düzənlə</a>
                    <a asp-action="delete" asp-route-id="@std.Id" class="btn btn-danger delete-btn">Sil</a>
                </td>
            </tr>
        }

    </tbody>
</table>








