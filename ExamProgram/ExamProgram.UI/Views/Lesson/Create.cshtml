@model LessonCreateViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">
    <h1 class="mx-3">Create</h1>
    <div class="row justify-content-center flex-column align-items-center">
        <form class="col-md-8" asp-action="Create" method="post">

            <div class="form-group col-md-12">
                <label asp-for="Code">Kodu</label>
                <input asp-for="Code" class="form-control" placeholder="Kodu">
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="Name">Adı</label>
                <input asp-for="Name" class="form-control" placeholder="Adı">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-12">
                <label asp-for="TeacherId">Müəllim adı</label>
                <select asp-for="TeacherId" class="form-select" aria-label="Default select example" asp-items="@(new SelectList(ViewBag.Teachers,"Id","Fullname"))"></select>
                <span asp-validation-for="TeacherId" class="text-danger"></span>
            </div>

            <div class="form-group col-md-12">
                <label asp-for="ClassId">Sinif no</label>
                <select asp-for="ClassId" class="form-select" aria-label="Default select example" asp-items="@(new SelectList(ViewBag.Classes,"Id","Number"))"></select>
                <span asp-validation-for="ClassId" class="text-danger"></span>
            </div>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>

            <button type="submit" class="btn btn-primary">Yarat</button>
            <a class="btn btn-danger" asp-action="index">Geriyə</a>
        </form>
    </div>
</div>
